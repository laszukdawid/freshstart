alias ls='exa'
alias ll='exa -al'
alias la='exa -a'
alias l='exa -l'

alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'

alias gs='git status'
alias ga='git add'
alias gd='git diff'

alias ..='cd ..'
alias ...='cd ../..'

alias python='python3'
alias pip='pip3'
alias py='python -m pdb -c c'

alias vim='nvim'
